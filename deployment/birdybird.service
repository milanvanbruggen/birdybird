[Unit]
Description=BirdyBird FastAPI Server
After=network.target

[Service]
User=__USER__
WorkingDirectory=__DIR__
ExecStart=__DIR__/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
Environment="PATH=__DIR__/venv/bin:/usr/local/bin:/usr/bin:/bin"

[Install]
WantedBy=multi-user.target
